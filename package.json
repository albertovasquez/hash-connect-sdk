{
  "name": "@hashpass/connect",
  "version": "3.1.8",
  "description": "HashConnect SDK v3 - React-only authentication and wallet integration for web applications",
  "main": "dist/hash-connect.js",
  "module": "dist/hash-connect.js",
  "types": "dist/react/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/hash-connect.js",
      "require": "./dist/hash-connect.js",
      "default": "./dist/hash-connect.js"
    }
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "MIGRATION_GUIDE.md"
  ],
  "keywords": [
    "hashconnect",
    "wallet",
    "authentication",
    "web3",
    "blockchain",
    "hash-pass",
    "pusher",
    "qrcode",
    "react",
    "nextjs"
  ],
  "author": "BitLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitlabs/hash-connect-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/bitlabs/hash-connect-sdk/issues"
  },
  "homepage": "https://github.com/bitlabs/hash-connect-sdk#readme",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && webpack --mode production && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build:dev": "webpack --mode development --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@types/react": "^19.2.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
